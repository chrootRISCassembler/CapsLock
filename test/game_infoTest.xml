<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="game_infoPackageTest">

    <test name="CompleteJSONTest">
        <parameter name="JSONFilePathString" value="./valid.json" />
        <groups>
            <run>
                <include name="normal" />
            </run>
        </groups>
        <classes>
            <class name="TestValidJSON" />
        </classes>
    </test>

    <test name="MinimalFieldGame">
        <parameter name="JSONFilePathString" value="./MinimalFieldGame.json" />
        <groups>
            <run>
                <include name="MinimalFieldGame" />
            </run>
        </groups>
        <classes>
            <class name="TestValidJSON" />
        </classes>
    </test>

    <test name="JSONDBWriterTest">
        <parameter name="file" value="tmp.json" />
        <classes>
            <class name="JSONWriteTest" />
        </classes>
    </test>

</suite>